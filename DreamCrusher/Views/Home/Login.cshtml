
@model DreamCrusher.Models.Home
@{
    Layout = null;
}

<title>@ViewBag.Title</title>



<!DOCTYPE html>
<html lang="zxx">

<head>
    <!-- meta tag -->
    <meta charset="utf-8">
    <title>Dream Crushers | Homepage</title>
    <meta name="description" content="">
    <!-- responsive tag -->
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- favicon -->
    <link rel="apple-touch-icon" href="apple-touch-icon.png">
    <link rel="shortcut icon" type="image/x-icon" href="/Websiteassets/images/fav.png">
    <!-- Bootstrap v4.4.1 css -->
    <link rel="stylesheet" type="text/css" href="/Websiteassets/css/bootstrap.min.css">
    <!-- font-awesome css -->
    <link rel="stylesheet" type="text/css" href="/Websiteassets/css/font-awesome.min.css">
    <!-- flaticon css -->
    <link rel="stylesheet" type="text/css" href="/Websiteassets/fonts/flaticon.css">
    <!-- animate css -->
    <link rel="stylesheet" type="text/css" href="/Websiteassets/css/animate.css">
    <!-- owl.carousel css -->
    <link rel="stylesheet" type="text/css" href="/Websiteassets/css/owl.carousel.css">
    <!-- off canvas css -->
    <link rel="stylesheet" type="text/css" href="/Websiteassets/css/off-canvas.css">
    <!-- magnific popup css -->
    <link rel="stylesheet" type="text/css" href="/Websiteassets/css/magnific-popup.css">
    <!-- Main Menu css -->
    <link rel="stylesheet" href="/Websiteassets/css/rsmenu-main.css">
    <!-- nivo slider CSS -->
    <link rel="stylesheet" type="text/css" href="/Websiteassets/inc/custom-slider/css/nivo-slider.css">
    <link rel="stylesheet" type="text/css" href="/Websiteassets/inc/custom-slider/css/preview.css">
    <!-- spacing css -->
    <link rel="stylesheet" type="text/css" href="/Websiteassets/css/rs-spacing.css">
    <!-- style css -->
    <link rel="stylesheet" type="text/css" href="/Websiteassets/style.css">
    <!-- This stylesheet dynamically changed from style.less -->
    <!-- responsive css -->
    <link rel="stylesheet" type="text/css" href="/Websiteassets/css/responsive.css">

</head>

<body class="home-orange-color regis_body">

    <div class="offwrap"></div>

    <!--Preloader start here-->
    <div id="pre-load">
        <div id="loader" class="loader">
            <div class="loader-container">
                <div class='loader-icon'><img src="/Websiteassets/images/fav.png" alt="Bizup Consulting Business"></div>
            </div>
        </div>
    </div>
    <!--Preloader area end here-->
    <!-- Main content Start -->
    <div class="main-content">
        <div class="section-authentication-cover">
            <div class="container">
                <div class="row g-0 authentication justify-content-center">
                    <div class="col-12 col-xl-5 col-lg-5 d-none d-lg-block">
                        <div class="card no-border hadow-none bg-transparent shadow-none rounded-0 mb-0">
                            <div class="card-body">
                                <img src="https://www.abdolphininfratech.com/assets33/images/login-images/home.png"
                                     class="img-fluid" alt="">
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-xl-5 col-lg-5 offset-lg-2">
                        <div class="card" style="background: url(https://www.abdolphininfratech.com/assets33/images/login-images/login_bg.png);
                         background-size: 100% 100%;">
                            <div class="card-body p-sm-5">
                                <div class="">
                                    <div class="mb-3 text-center">
                                        <a href="/Website/Index">
                                            <img class="rounded" src="/Websiteassets/images/login_logo.jpg" width="100"
                                                 alt="">
                                        </a>
                                    </div>
                                    <div class="text-center mb-4">
                                        <h5 class="">Sign into your account</h5>
                                        <p style="color:red"></p>
                                    </div>
@using (Html.BeginForm("LoginAction", "Home", FormMethod.Post, new { @id = "signupForm" }))
{
                                    <div class="form-body">
                                        <form class="row g-3">
                                            <div class="col-12">
                                                <label for="inputEmailAddress" class="form-label">Login Id</label>
                                                @Html.TextBoxFor(m => m.LoginId, new { @Placeholder = "Login Id", @class = "form-control", @required = "required" })


                                            </div>
                                            <div class="col-12">
                                                <label for="inputChoosePassword" class="form-label">Password</label>
                                                <div class="input-group" id="show_hide_password">
                                                   @Html.PasswordFor(m => m.Password, new { @Placeholder = "Password", @class = "form-control", @required = "required" })

                                                    <a href="javascript:;" class="input-group-text"
                                                       style="background-color:#e8f0fe"><i class="bx bx-hide"></i></a>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="d-grid gap-2">
                                                    <button type="submit" class="btn text-white"
                                                            style="background:#ab7d20;">
                                                        Login
                                                    </button>
                                                    <a href="/Home/Registration"
                                                       style="background:#c6c7c89c;"
                                                       class="forgot-password btn btn-light">Sign Up</a>
                                                    <a href="/Website/Index" style="background:#c6c7c89c;"
                                                       class="forgot-password btn btn-light">
                                                        <i class="lni lni-arrow-left"></i> Back To Website
                                                    </a>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end row-->
            </div>
        </div>

    </div>
    <!-- Main content End -->
    <!-- start scrollUp  -->
    <div id="scrollUp" class="orange2-color">
        <i class="fa fa-angle-up"></i>
    </div>
    <!-- End scrollUp  -->
    <!-- modernizr js -->
    <script src="~/Websiteassets/js/modernizr-2.8.3.min.js"></script>
    <!-- jquery latest version -->
    <script src="~/Websiteassets/js/jquery.min.js"></script>
    <!-- Bootstrap v4.4.1 js -->
    <script src="~/Websiteassets/js/bootstrap.min.js"></script>
    <!-- op nav js -->
    <script src="~/Websiteassets/js/jquery.nav.js"></script>
    <!-- isotope.pkgd.min js -->
    <script src="~/Websiteassets/js/isotope.pkgd.min.js"></script>
    <!-- owl.carousel js -->
    <script src="~/Websiteassets/js/owl.carousel.min.js"></script>
    <!-- wow js -->
    <script src="~/Websiteassets/js/wow.min.js"></script>
    <!-- Skill bar js -->
    <script src="~/Websiteassets/js/skill.bars.jquery.js"></script>
    <!-- imagesloaded js -->
    <script src="~/Websiteassets/js/imagesloaded.pkgd.min.js"></script>
    <!-- waypoints.min js -->
    <script src="~/Websiteassets/js/waypoints.min.js"></script>
    <!-- counterup.min js -->
    <script src="~/Websiteassets/js/jquery.counterup.min.js"></script>
    <!-- magnific popup js -->
    <script src="~/Websiteassets/js/jquery.magnific-popup.min.js"></script>
    <!-- Nivo slider js -->
    <script src="Websiteassets/inc/custom-slider/js/jquery.nivo.slider.js"></script>
    <!-- contact form js -->
    <script src="~/Websiteassets/js/contact.form.js"></script>
    <!-- main js -->
    <script src="~/Websiteassets/js/main.js"></script>

</body>

</html>



































































