@model DreamCrusher.Models.Profile

@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--favicon-->
    <link rel="icon" href="~/assetsAdmin/images/favicon-32x32.png" type="image/png" />
    <!--plugins-->
    <link href="~/assetsAdmin/plugins/vectormap/jquery-jvectormap-2.0.2.css" rel="stylesheet" />
    <link href="~/assetsAdmin/plugins/simplebar/css/simplebar.css" rel="stylesheet" />
    <link href="~/assetsAdmin/plugins/perfect-scrollbar/css/perfect-scrollbar.css" rel="stylesheet" />
    <link href="~/assetsAdmin/plugins/metismenu/css/metisMenu.min.css" rel="stylesheet" />
    <link href="~/assetsAdmin/plugins/datatable/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <!-- loader-->
    @*<link href="~/assetsAdmin/css/pace.min.css" rel="stylesheet" />*@
    <script src="~/assetsAdmin/js/pace.min.js"></script>
    <!-- Bootstrap CSS -->
    <link href="~/assetsAdmin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assetsAdmin/css/bootstrap-extended.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&amp;display=swap" rel="stylesheet">
    <link href="~/assetsAdmin/css/app.css" rel="stylesheet">
    <link href="~/assetsAdmin/css/icons.css" rel="stylesheet">
    <title>@ViewBag.Title</title>
</head>
<body class="bg-theme bg-theme1">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mt-3 text-center">
                <h3>Payout Receipt</h3>
            </div>
        </div>
        <div class="row">
            <table style="width:100%" class="display nowrap table">
                <tr>
                    <td>
                        Digi Direct PVT. LTD.<br />
                        @ViewBag.CompanyAddress<br />
                        @ViewBag.Phone<br />
                        @ViewBag.Email
                    </td>
                    <td>
                        <img height="auto" width="200" src="/Websiteassets/images/logo-white.png" class="pull-right" />
                    </td>
                </tr>
            </table>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table style="width:100%" class="display nowrap table table-hover">
                    <tr>
                        <td style="width:20%"><b>Name :</b></td>
                        <td style="width:30%"><b>@Model.DisplayName</b></td>
                        <td style="width:20%"><b>Login ID :</b></td>
                        <td style="width:30%"><b>@Model.LoginId</b></td>
                    </tr>
                    <tr>
                        <td><b>Closing Date :</b></td>
                        <td><b>@Model.ClosingDate</b></td>
                        <td><b>Payout No :</b></td>
                        <td><b>@Model.PayoutNo</b></td>
                    </tr>
                    <tr>
                        <td><b></b></td>
                        <td><b></b></td>
                        <td><b></b></td>
                        <td><b></b></td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h3>Income</h3>
                <table style="width:100%" class="display nowrap table table-hover table-striped table-bordered">
                    <thead >
                        <tr>
                            <th style="width:10%">S No</th>
                            <th style="width:60%">Description</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tr hidden="hidden">
                        <td>1</td>
                        <td>Direct Income</td>
                        <td>@Model.DirectIncome</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Business Volume matching Income</td>
                        <td>@Model.BinaryIncome</td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>Spill Leadership Bonus</td>
                        <td>@Model.LeadershipBonus</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>Gross Income</td>
                        <td>&#8377; @ViewBag.Income</td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h3>Deduction</h3>
                <table style="width:100%" class="display nowrap table table-hover table-striped table-bordered">
                    <thead >
                        <tr>
                            <th style="width:10%">S No</th>
                            <th style="width:60%">Description</th>
                            <th>Amount</th>
                        </tr>
                    </thead>
                    <tr>
                        <td>1</td>
                        <td>TDS Amount (@ViewBag.TDSPercent)</td>
                        <td>@Model.TDSAmount</td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Admin Fee (5%)</td>
                        <td>@Model.ProcessingFee</td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>Product Wallet (5%)</td>
                        <td>@Model.ProductWallet</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>Gross Deduction</td>
                        <td>&#8377; @ViewBag.Deduction</td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table style="width:100%" class="display nowrap table table-hover table-striped table-bordered">
                    <thead>
                        <tr>
                            <th style="width:10%"></th>
                            <th style="width:60%">Gross Income - Gross Deduction</th>
                            <th>Net Amount</th>
                        </tr>
                    </thead>
                    <tr>
                        <td></td>
                        <td>@ViewBag.Income - @ViewBag.Deduction</td>
                        <td>&#8377; @ViewBag.NetIncome</td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <hr />
                <p>
                    NOTE: This is an Electronic Generated Receipt.
                </p>
            </div>
        </div>

    </div>
</body>
</html>
