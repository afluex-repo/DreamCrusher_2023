@model DreamCrusher.Models.Master


@{
    ViewBag.Title = "GalleryMasterList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("GalleryMasterList", "Master", FormMethod.Post, new { @id = "form1", name = "formKYC" }))
{
    <div class="page-content">
        <div class="row">
            <div class="col-12 col-lg-12 col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <h5 class="mb-0">Gallery List</h5>
                        </div>
                        <p style="color: white;display: block; margin-bottom:0px; text-align:center">
                            @TempData["GalleryMasterList"]
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-12 col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example2" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>S No.</th>
                                        <th>Image</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstGallery1 != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstGallery1)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td><img width="100" height="100" src="@Item.Image" /></td>
                                                    <td>

                                                        <a href="/Master/DeleteImage?PK_GalleryID=@Item.PK_GalleryID" class="btn btn-danger btn-sm">Delete</a>

                                                    </td>
                                                </tr>
                                                i++;
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}




