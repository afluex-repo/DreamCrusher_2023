@model DreamCrusher.Models.Reports

@{
    ViewBag.Title = "TransactionLog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("TransactionLog", "AdminReports", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{

    <div class="page-content">

        <div class="row">
            <div class="col-12 col-lg-12 col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <h5 class="mb-0"> Transaction Log</h5>
                            @*<p style="color:#ffffff">
                                @TempData["BlockUnblock"]
                                @TempData["UpdateProfilebyadmin"]
                            </p>*@
                            @*<button class="btn btn-light repeater-add-btn px-4">Add</button>*@
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-12 col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label for="Action" class="form-label">  Action </label>
                                @Html.TextBoxFor(m => m.Action, new { @class = "form-control" })
                            </div>
                            <div class="col-md-3">
                                <label for="FromDate" class="form-label">From Date</label>
                                @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @readonly = "readonly", @placeholder = "From Date" })
                            </div>
                            <div class="col-md-3">
                                <label for="ToDate" class="form-label">To Date</label>
                                @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @readonly = "readonly", @placeholder = "To Date" })
                            </div>
                            <div class="col-12">
                                <input class="btn btn-light px-3" type="submit" value="Search" name="Search" id="btnSearch" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-lg-12 col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example2" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Transaction Date</th>
                                        <th>Action</th>
                                        <th>Remark</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lsttransactionlog != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lsttransactionlog)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.AddedOn</td>
                                                    <td>@Item.Action</td>
                                                    <td>@Item.Remarks</td>
                                                </tr>
                                                i++;
                                            }

                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
}
<script src="../../vendor/jquery/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">

<script>

    $('#FromDate').datepicker({
        dateFormat: 'yy-mm-dd',
    });
    $('#ToDate').datepicker({
        dateFormat: 'yy-mm-dd',
    });
</script>


