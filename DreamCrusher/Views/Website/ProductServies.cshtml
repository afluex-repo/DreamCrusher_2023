    $(document).ready(function () {
        $('.read-more').click(function () {
            var $textContainer = $(this).prev();
            $textContainer.toggle();
            if ($textContainer.is(':visible')) {
                $(this).text("Read Less");
            } else {
                $(this).text("Read More");
            }
        });
    });
</script>