@model DreamCrusher.Models.Password
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- /.row -->
@using (Html.BeginForm("ChangePassword", "Profile", FormMethod.Post, new { @id = "form1" }))
{
            <div class="page-content">
                <div class="row">
                    <div class="col-12 col-lg-12 col-xl-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h5 class="mb-0">Change Password</h5>
                                    <p style="color: #fff">@TempData["ChangePassword"] </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-12 col-xl-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-3 mb-3">
                                        <label class="form-label">Password Type <span style="color:red">*</span></label>
                                        @Html.DropDownListFor(m => m.PasswordType, new SelectList(ViewBag.ddlPasswordType, "Value", "Text"), new { @class = "form-control form-select" })
                                        @Html.ValidationMessageFor(m => m.PasswordType)
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label class="form-label">Old Password <span style="color:red">*</span></label>
                                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.OldPassword)
                                        @*<input type ="text" id="txtLastName" value="@item1.LastName" disabled="disabled" class="form-control" />*@

                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label class="form-label">New Password <span style="color:red">*</span></label>
                                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.NewPassword)
                                        @*<input type ="text" id="txtMobile"  value="@item1.Mobile" disabled="disabled" class="form-control" />*@

                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label class="form-label d-block">&nbsp;</label>
                                            <input type="submit" id="btnUpdate" class="btn btn-light px-3" name="btnUpdate" value="Update" onclick="return validate();" />

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>




}
            <style>
                .errortext {
                    border: 1px solid red !important;
                }
            </style>
            <script>
                function validate() {
                    $(".errortext").removeClass("errortext");
                    if ($('#PasswordType').val() == '0') {
                        $("#PasswordType").addClass('errortext');
                        $('#PasswordType').focus();
                        return false;
                    }
                    if ($('#OldPassword').val() == '') {
                        $("#OldPassword").addClass('errortext');
                        $('#OldPassword').focus();
                        return false;
                    }
                    if ($('#NewPassword').val() == '') {
                        $("#NewPassword").addClass('errortext');
                        $('#NewPassword').focus();
                        return false;
                    }

                    return true;
                }
            </script>


