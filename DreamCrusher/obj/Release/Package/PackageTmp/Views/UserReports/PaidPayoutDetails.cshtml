@model DreamCrusher.Models.Reports

@{
    ViewBag.Title = "PaidPayoutDetails";

    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("PaidPayoutDetails", "UserReports", FormMethod.Post, new { @id = "form1" }))
{
    
            


            <div class="page-content">
                <div class="row">
                    <div class="col-12 col-lg-12 col-xl-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h5 class="mb-0">Paid Payout Details</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-12 col-xl-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-3 mb-3">
                                        <label class="form-label">  From Date</label>
                                        @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label class="form-label"> To Date </label>
                                        @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label class="form-label d-block">&nbsp;  </label>
                                        <input class="btn btn-light px-3" type="submit" name="btnDetails" id="btnDetails" value="Get Details" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-12 col-xl-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="example2" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Sr No.</th>
                                                <th>Login Id</th>
                                                <th>Name</th>
                                                <th>Amount</th>
                                                <th>Description</th>
                                                <th>Payment Date</th>
                                                <th>Transaction Date</th>
                                                <th>Transaction No</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                            {
                                                if (Model.PaidPayoutlist != null)
                                                {
                                                    int i = 1;
                                                    foreach (var Item in Model.PaidPayoutlist)
                                                    {
                                                        <tr class="text-left">
                                                            <td>
                                                                @i

                                                            </td>
                                                            <td>@Item.LoginId</td>
                                                            <td>@Item.Name</td>
                                                            <td>@Item.Amount</td>
                                                            <td>@Item.Description</td>
                                                            <td>@Item.PaymentDate</td>
                                                            <td>@Item.TransactionDate</td>
                                                            <td>@Item.TransactionNo</td>

                                                        </tr>
                                                        i++;
                                                    }

                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

}


            <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
            <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
            <script src="../..//WebsiteCss/js/jquery.min.js"></script>
            <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
            <link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">

            <script>
                $('#FromDate').datepicker({
                    dateFormat: 'dd/mm/yy',
                    changeMonth: true,
                    changeYear: true,
                    yearRange: "-60:+0"
                });

                $('#ToDate').datepicker({
                    dateFormat: 'dd/mm/yy',
                    changeMonth: true,
                    changeYear: true,
                    yearRange: "-60:+0"
                });

            </script>






