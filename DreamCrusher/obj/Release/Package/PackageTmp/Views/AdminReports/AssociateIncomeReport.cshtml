@model DreamCrusher.Models.Reports

@{
    ViewBag.Title = "AssociateIncomeReport";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

@using (Html.BeginForm("AssociateIncomeReport", "AdminReports", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-12 col-lg-12 col-xl-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">Income Details</h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-12 col-xl-12">
            <div class="card mt-2">
                <div class="card-body">
                    <div class="row g-3">
                       
                        <div class="col-md-3">
                            <label for="FromDate" class="form-label">From Date</label>
                            @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @autocomplete = "off", @placeholder = "From Date" })
                        </div>
                        <div class="col-md-3">
                            <label for="ToDate" class="form-label">To Date</label>
                            @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @autocomplete = "off", @placeholder = "To Date" })
                        </div>
                        <div class="col-md-3">
                            <label for="LoginID" class="form-label">Login ID</label>
                            @Html.TextBoxFor(m => m.ToLoginID, new { @class = "form-control",@placeholder="Login ID" })
                        </div>
                        <div class="col-md-3">
                                <label for="Name" class="form-label">Name</label>
                                @Html.TextBoxFor(m => m.ToName, new { @class = "form-control", @placeholder = "Name" })
                        </div>
                        <div class="col-md-3">
                                <label for="Status" class="form-label">Status</label>
                                @Html.DropDownListFor(m => m.Status, new SelectList(ViewBag.PaidStatus, "Value", "Text"), new { @class = "form-control form-select" })
                        </div>

                        <div class="col-md-3">
                            <br />
                            <input class="btn btn-light px-3" type="submit" value="Search" name="Search" id="btnSearch" />
                        </div>
                    </div>

                    <br />
                    <br />

                    <div class="table-responsive">
                        <table id="example2" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Sr No.</th>
                                    <th>Date</th>
                                    <th> LoginID</th>
                                    <th> Name</th>
                                    <th>Amount</th>
                                    <th>Income Type</th>
                                    <th>Status</th>
                                </tr>
                            </thead>

                            <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lsttopupreport != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lsttopupreport)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.TransactionDate</td>
                                                    <td>@Item.ToLoginID</td>
                                                    <td>@Item.ToName</td>
                                                    <td>@Item.Amount</td>
                                                    <td>@Item.IncomeType</td>
                                                    <td>@Item.Status</td>

                                                </tr>
                                                i++;
                                            }

                                        }
                                    }
                            </tbody>

                            <tfoot>
                                <tr>
                                    <th>Sr No.</th>
                                    <th>Date</th>
                                    <th> LoginID</th>
                                    <th> Name</th>
                                    <th>Amount</th>
                                    <th>Income Type</th>
                                    <th>Status</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
}

<script src="../vendor/jquery/jquery.min.js"></script>

<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">

<script>

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeMonth: true,
        changeYear: true,
        yearRange: "-60:+0",
    });


    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeMonth: true,
        changeYear: true,
        yearRange: "-60:+0",
    });


    function isNumberOrDecimal(evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }

</script>
<style>
    .btn {
        margin-top: 8px;
    }
</style>
