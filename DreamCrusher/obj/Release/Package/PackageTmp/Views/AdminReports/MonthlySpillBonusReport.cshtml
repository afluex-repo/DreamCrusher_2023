@model DreamCrusher.Models.Reports


@{
    ViewBag.Title = "MonthlySpillBonusReport";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm("MonthlySpillBonusReport", "AdminReports", FormMethod.Post, new { @id = "form1" }))
{



    <div class="page-content">

        <div class="row">
            <div class="col-12 col-lg-12 col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <h5 class="mb-0">Monthly Spill Bonus Report</h5>
                            @*<p style="color:#ffffff">
                                    @TempData["BlockUnblock"]
                                    @TempData["UpdateProfilebyadmin"]
                                </p>*@
                            @*<button class="btn btn-light repeater-add-btn px-4">Add</button>*@
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-12 col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label for="LoginId" class="form-label">Login ID </label>
                                @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @placeholder = "Login Id" })
                            </div>
                            <div class="col-md-3">
                                <label for="Month" class="form-label"> Month </label>
                                <select class="form-control form-select" id="Month" name="Month">
                                    <option value="0">--Select Month--</option>
                                    <option value="1">January</option>
                                    <option value="2">February</option>
                                    <option value="3">March</option>
                                    <option value="4">April</option>
                                    <option value="5">May</option>
                                    <option value="6">June</option>
                                    <option value="7">July</option>
                                    <option value="8">August</option>
                                    <option value="9">September</option>
                                    <option value="10">October</option>
                                    <option value="11">November</option>
                                    <option value="12">December</option>

                                </select>
                            </div>
                            <div class="col-md-3 mt-5">
                                <input class="btn btn-light px-3" type="submit" value="Search" name="Search" id="btnSearch" onclick="return validate();" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-lg-12 col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example2" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Month</th>
                                        <th>Login Id</th>
                                        <th>Name</th>
                                        <th>Left BV</th>
                                        <th>Right BV</th>
                                        <th>Income</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstdcmireport != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lstdcmireport)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.Month</td>
                                                    <td>@Item.LoginId</td>
                                                    <td>@Item.Name</td>
                                                    <td>@Item.LeftBV</td>
                                                    <td>@Item.RightBV</td>
                                                    <td>@Item.TDS</td>

                                                </tr>
                                                i++;
                                            }

                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
}

