@model DreamCrusher.Models.Reports

@{
    ViewBag.Title = "TDSReport";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



@using (Html.BeginForm("TDSReport", "AdminReports", FormMethod.Post, new { @id = "form1" }))
{


    <div class="page-content">

        <div class="row">
            <div class="col-12 col-lg-12 col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <h5 class="mb-0"> TDS Reports</h5>
                            @*<p style="color:#ffffff">
                                    @TempData["BlockUnblock"]
                                    @TempData["UpdateProfilebyadmin"]
                                </p>*@
                            @*<button class="btn btn-light repeater-add-btn px-4">Add</button>*@
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-12 col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label for="PANNumber" class="form-label">  PAN Number </label>
                                @Html.TextBoxFor(m => m.PAN, new { @class = "form-control", @placeholder = "PAN Number", @maxlength = "10" })
                            </div>
                            <div class="col-md-3">
                                <label for="FromDate" class="form-label">From Date</label>
                                @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @readonly = "readonly", @placeholder = "From Date" })
                            </div>
                            <div class="col-md-3">
                                <label for="ToDate" class="form-label">To Date</label>
                                @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @readonly = "readonly", @placeholder = "To Date" })
                            </div>
                            <div class="col-md-3 mt-5">
                                <input type="submit" class="btn btn-light px-3" value="Get Details" name="GetDetails" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 col-lg-12 col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example2" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>PAN Number</th>
                                        <th>TDS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lsttopupreport != null)
                                        {
                                            int i = 1;
                                            foreach (var Item in Model.lsttopupreport)
                                            {
                                                <tr class="text-left">
                                                    <td>@i</td>
                                                    <td>@Item.PAN</td>
                                                    <td>@Item.TDSAmount</td>
                                                </tr>
                                                i++;
                                            }

                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script src="../vendor/jquery/jquery.min.js"></script>

<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
<script>

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
    });
</script>
