@model DreamCrusher.Models.Master

@{
    ViewBag.Title = "GalleryMaster";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("GalleryMaster", "Master", FormMethod.Post, new { @id = "form1", enctype = "multipart/form-data" }))
{
    <div class="page-content">
        <div class="row">
            <div class="col-12 col-lg-12 col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <h5 class="mb-0">Gallery Master</h5>
                        </div>
                        <p style="color: white;;display: block; margin-bottom:0px; text-align:center">
                            @TempData["GalleryMaster"]
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-12 col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label">Image<span style="color: red">*</span></label>
                                <input type="file" name="postedFile" id="Image" class="form-control" />
                            </div>
                            <div class="col-12">

                                <input class="btn btn-light px-3" style="margin-right:5px;" type="submit" onclick="return validateform();" value="Save" id="btnSave" name="btnSave" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script>
    function validateform() {
        $(".errortext").removeClass("errortext");


        if ($('#Image').val() == '') {
            $("#Image").addClass('errortext');
            $('#Image').focus();
            alert("Please select Project image..!");
            return false;
        }
        return true;
    }

    function isNumberOrDecimal(evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }

    function onlyAlphabets(e, t) {
        try {
            if (window.event) {
                var charCode = window.event.keyCode;
            }
            else if (e) {
                var charCode = e.which;
            }
            else { return true; }
            if ((charCode > 64 && charCode < 91) || (charCode > 96 && charCode < 123))
                return true;
            else
                return false;
        }
        catch (err) {
            alert(err.Description);
        }
    }


</script>


<style>
    .errortext {
        border: 1px solid red !important;
        /*background-color: #fff0f0 !important;*/
    }
</style>





